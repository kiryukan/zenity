{{#propertyType}}
    {{#if string}}
        <input class="mono-input" name="value" type="text" oninput="propertyInputUpdate('value',this)">
    {{/if}}
    {{#unless string}}
        <input class="double-input form-group" name="minValue" oninput="propertyInputUpdate('minValue',this)" value="{{../minValue}}"
            {{#integer }}
               type="number"
               step="1"
            {{/integer}}
            {{#number }}
               type="number"
               step="0.01"
            {{/number}}
        >
        <input class="double-input" name="maxValue" oninput="propertyInputUpdate('maxValue',this)" value="{{../maxValue}}"
            {{#integer }}
               type="number"
               step="1"
            {{/integer}}
            {{#number }}
               type="number"
               step="0.01"
            {{/number}}
        >
    {{/unless}}
{{/propertyType}}
