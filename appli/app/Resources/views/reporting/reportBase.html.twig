{% extends 'pages/pageWithNavbar.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/graph.css') }}">
    <link rel="stylesheet" href="{{ asset('css/report.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar-fixed-side.css') }}"/>
{% endblock  %}
{% block body %}

    {{ parent() }}
    <div class="container-fluid">
        <div class="row">
            <div class="menu-side">
                {% block menu_side %}{% endblock %}
            </div>
            <div class="report-core" >
              <div class="report-title">Bienvenue sur ZENITY</div>
              <div class="progress" id="progressbar-wrapper" hidden>
                  <div id="progressbar" class="progress-bar progress-bar-info active" role="progressbar"
                       aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0" >
                      0%
                  </div>
              </div>

                <div id="repport-wrapper" class="printArea">
                    <div class="container-fluid">

                        {% block report_content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/leftMenuArrow.js') }}"></script>
    <script src="{{ asset('vendor/d3.min.js') }}"></script>
    <script src="{{ asset('vendor/c3/c3.js') }}"></script>
    <script src="{{ asset('charty/charty.js') }}"></script>
    <script src="{{ asset('charty/objects/Factory.js') }}"></script>
    <script src="{{ asset('charty/objects/LineGraph.js') }}"></script>
    <script src="{{ asset('charty/objects/LineGraph_note.js') }}"></script>
    <script src="{{ asset('charty/objects/PieChart.js') }}"></script>
    <script src="{{ asset('charty/objects/InformationTable.js') }}"></script>
    <script src="{{ asset('charty/objects/InformationTableOverTime.js') }}"></script>
    <script src="{{ asset('charty/objects/Gauge.js') }}"></script>
    <script src="{{ asset('charty/objects/Advisory.js') }}"></script>
    <script src="{{ asset('js/toTheCloud/paas.js') }}"></script>
    <script src="{{ asset('js/toTheCloud/iaas.js') }}"></script>

    <!--<script src="{{ asset('charty/charty.min.js') }}"></script> -->
    <script>
        function printReport() {
            $('#repport-wrapper').printElement();
        }
    </script>
{% endblock %}
{% block graphJs %}

{% endblock %}
